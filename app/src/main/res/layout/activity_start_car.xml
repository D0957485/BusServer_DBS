<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/coordinatorLayoutStart"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center">

  <android.support.design.widget.AppBarLayout
    android:id="@+id/appbarStart"

    android:layout_width="410dp"
    android:layout_height="56dp"
    android:background="#0524EC"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <Button
      android:id="@+id/backStart"
      android:layout_width="59dp"
      android:layout_height="match_parent"
      android:background="#00FFFFFF"
      android:foreground="?attr/actionModeCloseDrawable"
      android:foregroundTint="@color/white"
      tools:ignore="SpeakableTextPresentCheck" />

    <TextView
      android:id="@+id/titalStart"
      android:layout_width="94dp"
      android:layout_height="match_parent"
      android:text="發車"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="34sp"
      android:textStyle="bold" />
  </android.support.design.widget.AppBarLayout>

  <TextView
    android:id="@+id/itemStart1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="116dp"
    android:text="車牌號碼"
    android:textColor="#131212"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/appbarStart" />

  <TextView
    android:id="@+id/itemStart2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="57dp"
    android:text="公車號碼"
    android:textColor="#131212"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/itemStart1" />

  <TextView
    android:id="@+id/itemStart3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="56dp"
    android:text="發車時間"
    android:textColor="#131212"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/itemStart2" />

  <EditText
    android:id="@+id/timeStart3"
    android:layout_width="204dp"
    android:layout_height="51dp"
    android:layout_marginTop="32dp"
    android:ems="10"
    android:inputType="time"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.32"
    app:layout_constraintStart_toEndOf="@+id/itemStart3"
    app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword3"
    tools:ignore="SpeakableTextPresentCheck" />

  <Button
    android:id="@+id/startcar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="56dp"
    android:background="#03A9F4"
    android:text="發車"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/timeStart3" />

  <EditText
    android:id="@+id/editTextTextPassword2"
    android:layout_width="204sp"
    android:layout_height="51sp"
    android:layout_marginTop="108dp"
    android:ems="10"
    android:inputType="textPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.319"
    app:layout_constraintStart_toEndOf="@+id/itemStart1"
    app:layout_constraintTop_toBottomOf="@+id/appbarStart"
    tools:ignore="SpeakableTextPresentCheck" />

  <EditText
    android:id="@+id/editTextTextPassword3"
    android:layout_width="204sp"
    android:layout_height="51sp"
    android:layout_marginTop="28dp"
    android:ems="10"
    android:inputType="textPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.294"
    app:layout_constraintStart_toEndOf="@+id/itemStart2"
    app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2"
    tools:ignore="SpeakableTextPresentCheck" />


</android.support.constraint.ConstraintLayout>