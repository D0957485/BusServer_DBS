<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".BusSearch">

  <TextView
    android:id="@+id/titalSearch"
    android:layout_width="354dp"
    android:layout_height="41dp"
    android:background="#00BCD4"
    android:text="查詢公車"
    android:textAlignment="inherit"
    android:textAllCaps="false"
    android:textColor="@color/black"
    android:textDirection="inherit"
    android:textIsSelectable="false"
    android:textSize="30sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/backOnBusya"
    app:layout_constraintTop_toTopOf="parent" />

  <ListView
    android:id="@+id/busList"
    android:layout_width="408dp"
    android:layout_height="615dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/searchView" />

  <Button
    android:id="@+id/backOnBusya"
    android:layout_width="54dp"
    android:layout_height="41dp"
    android:background="#00BCD4"
    android:foreground="?attr/homeAsUpIndicator"
    android:foregroundTint="@color/black"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="SpeakableTextPresentCheck" />

  <SearchView
    android:id="@+id/searchView"
    android:layout_width="358dp"
    android:layout_height="38dp"
    android:layout_marginTop="12dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.49"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/titalSearch" />

</android.support.constraint.ConstraintLayout>